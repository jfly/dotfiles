#!/usr/bin/env bash

host=$1
port=$2

two_factors=$(2fa-cli)
if [ $? -eq 0 ]; then
    second_factor=$(echo "$two_factors" | grep bastion | cut -f 1)
    echo "Identified attached phone! Copying two factor key ($second_factor) to clipboard" &> /dev/stderr
    echo "$second_factor" | clipit
fi

exec nc $1 $2
